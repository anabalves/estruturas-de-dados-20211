import javax.swing.JOptionPane;

public class Exercicio_L1_11 {

	public static void main(String[] args) {
		do {
			int limite = Integer.parseInt(JOptionPane.showInputDialog("Digite um número inteiro positivo para calcular a série"));
		} while (num <= 0);
		System.out.println(0 + CalcularProgressao(limite));
	}

	public static double CalcularProgressao(int limite) {
		if (limite == 1)
			return 1.0;
		else
			return 1.0 / limite + CalcularProgressao(limite - 1);

	}

}
