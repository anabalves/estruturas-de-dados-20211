import javax.swing.JOptionPane;

public class Exercicio_L1_6 {

	public static void main(String[] args) {
		int num;
		do {
			num = Integer.parseInt(JOptionPane.showInputDialog("Digite um número positivo para calcular seu fatorial"));
		} while (num < 0);
		JOptionPane.showMessageDialog(null, "O fatorial de " + num + " é " + calculaFatorial(num));
	}

	private static int calculaFatorial(int n) {
		if (n == 0)
			return 1;
		else
			return n * calculaFatorial(n - 1);
	}

}
